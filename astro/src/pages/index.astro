---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <Card title="About Me" url="/about-me" backgroundClass="bg-blue-500" />
        <Card
            title="Work Experience"
            url="/work-experience"
            backgroundClass="bg-red-500"
        />
        <Card title="Projects" url="/projects" backgroundClass="bg-green-500" />
        <Card
            title="Tech Stack"
            url="/tech-stack"
            backgroundClass="bg-orange-500"
        />
        <Card
            title="Open Source Projects"
            url="/open-source-projects"
            backgroundClass="bg-purple-600"
        />
        <Card
            title="Get in Touch"
            url="/contact-me"
            backgroundClass="bg-yellow-600"
        />
    </div>
</Layout>
