---
import "../styles/global.css";
import Nav from "../components/Nav.astro";

const { title } = Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-[#2e3440] text-gray-300">
        <div class="relative min-h-screen py-5 flex flex-col">
            <!-- <header
                class="mx-auto container sticky top-0 z-50 rounded-3xl shadow-2xl bg-[#4c566a] text-[#e5e9f0] py-3 px-5 flex justify-between items-end"
            >
                <div>kusmayadi</div>
                <ul class="flex items-center space-x-3">
                    <li>work experience</li>
                    <li>projects</li>
                    <li>open source projects</li>
                    <li>tech stack</li>
                </ul>
            </header> -->

            <div
                class="container mx-auto flex flex-col items-center justify-center flex-1 px-7 xl:px-0"
            >
                <slot />
            </div>

            {currentPath !== "/" && <Nav />}
        </div>
    </body>
</html>
